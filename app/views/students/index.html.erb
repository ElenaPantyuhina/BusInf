<h1>Список студентов</h1>

<table>
  <tr>
    <th>Фамилия</th>
    <th>Имя</th>
    <th>Отчество</th>
    <th>Группа</th>
    <th>Староста</th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.student_surname %></td>
    <td><%= student.student_name %></td>
    <td><%= student.student_secondname %></td>
    <td><%= student.student_group %></td>
    <% if student.student_captain == true %>
        <td>Да</td>
    <% else %>
        <td></td>
    <% end %>
    <td><%= link_to 'Показать', student %></td>
    <td><%= link_to 'Редактировать', edit_student_path(student) %></td>
    <td><%= link_to 'Удалить', student, confirm: 'Действительно удалить?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить студента', new_student_path %>
