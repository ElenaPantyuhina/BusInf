<h1>Список курсов</h1>

<table>
  <tr>
    <th>Номер</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.numder %></td>
    <td><%= link_to 'Посмотреть', course %></td>
    <td><%= link_to 'Редактировать', edit_course_path(course) %></td>
    <td><%= link_to 'Удалить', course, confirm: 'Действительно удалить?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить курс', new_course_path %>
